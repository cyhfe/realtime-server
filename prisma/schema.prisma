generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String          @id @default(uuid())
  createdAt     DateTime        @default(now())
  role          String          @default("MEMBER")
  username      String          @unique
  password      String
  ChanelMessage ChanelMessage[]
  Chanel        Chanel[]

  privateRoom     PrivateRoom?
  privateMessages PrivateMessage[]
}

model ChanelMessage {
  id         String   @id @default(uuid())
  createdAt  DateTime @default(now())
  fromUserId String
  from       User     @relation(fields: [fromUserId], references: [id])
  toChanelId String
  to         Chanel   @relation(fields: [toChanelId], references: [id])
  read       Boolean  @default(false)
  content    String
}

model Chanel {
  id        String          @id @default(uuid())
  name      String          @unique
  createdAt DateTime        @default(now())
  userId    String
  belongsTo User            @relation(fields: [userId], references: [id])
  messages  ChanelMessage[]
}

model PrivateMessage {
  id         String      @id @default(uuid())
  createdAt  DateTime    @default(now())
  fromUserId String
  from       User        @relation(fields: [fromUserId], references: [id])
  toUserId   String
  to         PrivateRoom @relation(fields: [toUserId], references: [userId])
  content    String
}

model PrivateRoom {
  id              String           @id @default(uuid())
  createdAt       DateTime         @default(now())
  userId          String           @unique
  belongsTo       User             @relation(fields: [userId], references: [id])
  privateMessages PrivateMessage[]
}
